<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Blog</title>
</head>
<body class="bg-gray-100 text-gray-800">
    <%- include('./partials/scripts.ejs') %>
    <%- include("./partials/nav.ejs") %>

    <!-- Hero Image -->
    <div class="w-full h-[60vh] md:h-[75vh] overflow-hidden relative">
        <img
            src="<%= blog.coverImageURL %>"
            alt="Blog Cover"
            class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/30"></div> <!-- Optional dark overlay -->
    </div>

    <!-- Title and Body -->
    <div class="max-w-3xl mx-auto px-4 py-10">
        <h1 class="text-4xl font-bold mb-6 text-center text-gray-900">
            <%= blog.title %>
        </h1>
        <p class="text-lg leading-relaxed text-gray-700 whitespace-pre-line">
            <%= blog.body %>
        </p>
    </div>
</body>
</html>
